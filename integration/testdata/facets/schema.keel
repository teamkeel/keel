model Order {
    fields {
        quantity Number
        price Decimal
        category Text
        status Status
    }
    actions {
        list listOrders(category?, price?) {
            @facet(quantity, price, status, category)
            @where(order.status != Status.Cancelled)
        }
        create createOrder() with (quantity, price, category, status) {
            @permission(expression: true)
        }
    }
    @permission(expression: true, actions: [get,list])
}

enum Status {
    Complete
    InProgress
    Cancelled
}