model Post {
    fields {
        title Text?
        length Number?
        aTimestamp Timestamp?
    }

    operations {
        create createPost() with (title?, length?, aTimestamp?)
        list listPostsEqualString(whereArg: Text) {
            @where(post.title == whereArg)
        }
        list listPostsNotEqualString(whereArg: Text) {
            @where(post.title != whereArg)
        }
    }
}

enum Category {
    Technical
    Lifestyle
    Food
}

api Web {
    @graphql

    models {
        Post
    }
}
