model Post {
    fields {
        title Text?
        views Number?
        active Boolean?
        identity Identity?
    }

    operations {
        create createWithTrueValuePermission() with (title) {
            @permission(expression: true)
        }
        create createWithInputArgPermission() with (title) {
            @permission(expression: title == "123")
        }
    }
}

api Web {
    @graphql

    models {
        Post
    }
}
