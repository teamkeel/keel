flow ScalarStep {
    @permission(roles: [Admin])
}

flow MixedStepTypes {
    inputs {
        name Text
        age Number
    }
    @permission(roles: [Admin])
}

flow Stepless {
    @permission(roles: [Admin])
}

flow UserFlow {
    @permission(roles: [User])
}

flow SingleStep {
    @permission(roles: [Admin])
}

flow ErrorInFlow {
    @permission(roles: [Admin])
}

flow OnlyPages {
    @permission(roles: [Admin])
}

flow OnlyFunctions {
    inputs {
        name Text
        age Number
    }
    @permission(roles: [Admin])
}

flow ValidationText {
    @permission(roles: [Admin])
}

flow ValidationBoolean {
    @permission(roles: [Admin])
}

flow ValidationPage {
    @permission(roles: [Admin])
}

flow ValidationPageWithAction {
    @permission(roles: [Admin])
}

enum MyEnum {
    Value1
    Value2
}

flow AllInputs {
    inputs {
        id ID?
        text Text?
        markdown Markdown?
        bool Boolean?
        number Number?
        decimal Decimal?
        date Date?
        timestamp Timestamp?
        file File?
        duration Duration?
        myEnum MyEnum?
    }
    @permission(roles: [Admin])
}

flow EnvStep {
    @permission(roles: [Admin])
}

flow MultipleActions {
    @permission(roles: [Admin])
}

flow WithCompletion {
    @permission(roles: [Admin])
}

flow WithCompletionMinimal {
    @permission(roles: [Admin])
}

flow WithReturnedData {
    @permission(roles: [Admin])
}

flow ExpressionPermissionCtx {
    @permission(expression: ctx.identity.user.team == "myTeam")
}

flow ExpressionPermissionEnv {
    @permission(expression: ctx.identity.user.team == ctx.env.ADMIN_TEAM)
}

flow ExpressionPermissionIsTrue {
    @permission(expression: true)
}

flow DataWrapperConsistency {
    @permission(roles: [Admin])
}

flow MapStep {
    @permission(roles: [Admin])
}

flow DateStep {
    @permission(roles: [Admin])
}

flow ModelStep {
    inputs {
        name Text
        age Number
    }
    @permission(roles: [Admin])
}

model User {
    fields {
        team Text
        identity Identity @unique
    }
}

model Thing {
    fields {
        name Text?
        age Number?
    }
}

role Admin {
    domains {
        "keel.xyz"
    }
}

role User {
    domains {
        "gmail.com"
    }
}
