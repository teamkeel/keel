flow ScalarStep {
    @permission(roles: [Admin])
}

flow MixedStepTypes {
    inputs {
        name Text
        age Number
    }
    @permission(roles: [Admin])
}

flow Stepless {
    @permission(roles: [Admin])
}

flow UserFlow {
    @permission(roles: [User])
}

flow SingleStep {
    @permission(roles: [Admin])
}

flow ErrorInStep {
    @permission(roles: [Admin])
}

flow ErrorInFlow {
    @permission(roles: [Admin])
}

flow TimeoutStep {
    @permission(roles: [Admin])
}

flow OnlyPages {
    @permission(roles: [Admin])
}

flow OnlyFunctions {
    inputs {
        name Text
        age Number
    }
    
    @permission(roles: [Admin])
}

model Thing {
    fields {
        name Text?
        age Number?
    }
}

role Admin {
    domains {
        "keel.xyz"
    }   
}

role User {
    domains {
        "gmail.com"
    }   
}
