model Person {
    fields {
        name Text
    }

    actions {
        create createPerson() with (id, name) {
            @permission(expression: true)
        }
        create createPersonWithSet() with (id: ID, name) {
            @set(person.id = id)
        }

        get getPerson(id) {
            @permission(expression: true)
        }
    }
}
