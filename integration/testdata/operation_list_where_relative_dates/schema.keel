model Post {
    fields {
        title Text?
        length Number?
        aDate Date?
        aTimestamp Timestamp?
        aDecimal Decimal?
    }

    actions {
        create createPost() with (title?, length?, aDate?, aTimestamp?, aDecimal?)
        list listPostsByDate(aDate)
        list listPostsByTimestamp(aTimestamp)
    }

    @permission(
        expression: true,
        actions: [create, get, list, update, delete]
    )
}

enum Category {
    Technical
    Lifestyle
    Food
}

api Web {
    models {
        Post
    }
}
