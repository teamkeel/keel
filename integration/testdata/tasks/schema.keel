task EmptyFlow {
    fields {
        orderDate Date
        shipByDate Date
    }

    @permission(roles: [User])
    @orderBy(shipByDate: asc, orderDate: asc)
}

enum Priority {
    Low
    Medium
    High
}

task InputsTask {
    fields {
        textField Text
        numberField Number
        booleanField Boolean
        dateField Date
        timestampField Timestamp
        decimalField Decimal
        enumField Priority
        optionalTextField Text?
    }

    @permission(roles: [User])
}

// Task that creates child tasks from within its flow
task ParentTask {
    fields {
        name Text
        childCount Number
    }

    @permission(roles: [User])
}

// Simple task that can be created by the ParentTask flow
task ChildTask {
    fields {
        parentName Text
        index Number
    }

    @permission(roles: [User])
}

role User {
    domains {
        "keel.xyz"
    }
}
