model User {
    fields {
        identity Identity @unique
        name Text
        userOrgs UserOrganisation[]
    }

    operations {
        create createUser() with (name) {
            @set(user.identity = ctx.identity)
        }
        get getUser(id)
        list listUsersByOrganisation(userOrgs.organisation.id) {
            @permission(expression: ctx.identity in user.userOrgs.organisation.users.user.identity and user.userOrgs.organisation ==  '2U0Xp1TU67hl30hpgoWVB9Cg4I4')
        }
    }

    @permission(expression: ctx.isAuthenticated, actions:[create])

    @permission(
        expression: user.identity == ctx.identity,
        actions: [get]
    )

    @permission(
        expression: ctx.identity in user.userOrgs.organisation.users.user.identity,
        actions: [get]
    )

     @permission(
        expression: ctx.identity in user.userOrgs.organisation.users.user.identity,
        actions: [list]
    )
}

model Organisation {
    fields {
        name Text
        users UserOrganisation[]
    }

    operations {
        create createOrganisation() with (name, users.user.id)
        list listOrganisations() {
            @where(ctx.identity in organisation.users.user.identity)
        }
        get getOrganisation(id)
    }

    @permission(
        expression: ctx.identity in organisation.users.user.identity,
        actions: [create, list, get]
    )
}

model UserOrganisation {
    fields {
        user User
        organisation Organisation
    }
}

api Web {
    models {
        Identity
        User
        Organisation
        UserOrganisation
    }
}
