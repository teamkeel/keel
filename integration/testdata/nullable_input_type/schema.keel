model Person {
    fields {
        nickName Text?
        company Company?
        withDefault Text? @default("default value")
    }

    operations {
        create createPerson() with (nickName?, company.id?, withDefault?)
        create createPersonAndCompany() with (nickName?, company.tradingAs?, company.withDefault?)
        update updatePerson(id) with (nickName?, company.id?)
        list listPerson(nickName?, company.tradingAs?)
    }

    @permission(expression: true, actions:[create, update, list])
}

model Company {
    fields {
        tradingAs Text?
        withDefault Text? @default("default value")
    }

}

api Web {
    models {
        Person
    }
}
