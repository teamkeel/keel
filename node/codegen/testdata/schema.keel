model Post {
    fields {
        title Text
        published Boolean
        subTitle Text?
    }

    operations {
        create createPost() with (title, published)
        update updatePost(id) with (title, published)
        get getPost(id)
        delete deletePost(id)
        list listPost()
    }

    functions {
        create customCreatePost() with (title, subTitle, published)
        update customUpdatePost(id) with (title, subTitle, published)
        get customGetPost(id)
        delete customDeletePost(id)
        list customListPost(title)
    }
}

api Web {
    @graphql

    models {
        Post
    }
}
